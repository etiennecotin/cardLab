{% extends 'AppBundle::base_jeu.html.twig' %}

{% block body %}
    {% include 'AppBundle::Default/header.html.twig' with {'user': user.userPrenom } %}
    <div class="jeu">

        <div class="tapis">
            <a href="classement.html" class="lien_gauche"><</a>
            <a href="profil.html" class="lien_droit">></a>

            <div class="pages">
                <h2>Historique de mes tournois</h2>
                <hr>
                <table>
                    <tr id="entete">
                        <td>Nom</td>
                        <td>Date</td>
                    </tr>

                    {% for tournoi in user.tournois if tournoi.tournoisDateFin != null %}
                        <tr>
                            <td><a href="{{ path('historique_tournoi', {'id':tournoi.id} ) }}">{{ tournoi.tournoisNom }}</a></td>
                            <td>{{ tournoi.tournoisDateFin | date }}</td>
                        </tr>
                    {% endfor %}
                </table>
                <a href="{{ path('tournois_homepage') }}"><button>Retour</button></a>
            </div>

        </div>
        {% include 'AppBundle::Default/image_plateau.html.twig'%}
    </div>

{% endblock %}