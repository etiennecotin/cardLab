{% extends 'AppBundle::base_jeu.html.twig' %}

{% block body %}
    {% include 'AppBundle::Default/header.html.twig' with {'user': user.userPrenom } %}
    <div class="jeu">
        <div class="tapis">
            <a href="historique.html" class="lien_gauche"><</a>
            <a href="tournois.html" class="lien_droit">></a>

            <div class="pages">
                <h2>Classement des meilleurs joueurs</h2>
                <hr>
                <table>
                    <tr id="entete">
                        <td>Pseudo</td>
                        <td>Score</td>
                    </tr>
                    {% for joueur in classement|slice(0,10) %}
                        <tr>
                            <td>{{ joueur.username }}</td>
                            <td >{{ joueur.userBestScore }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

        </div>

        {% include 'AppBundle::Default/image_plateau.html.twig'%}

    </div>
{% endblock %}