{% extends 'AppBundle::base_jeu.html.twig' %}

{% block body %}

    {% include 'AppBundle::Default/header.html.twig' with {'user': user.userPrenom } %}
    <div class="jeu">


        <div class="tapis">
            <a href="profil.html" class="lien_gauche"><</a>
            <a href="parties.html" class="lien_droit">></a>

            <div class="pages">
                <h2>Créer une nouvelle partie</h2>
                <hr>
                <table>
                    {% for joueur in joueurs if joueur.username != user.username %}
                        <tr>
                            <td>{{ joueur.username }}</td>
                            <td><a href="{{ path('creer_partie', {'joueur':joueur.id}) }}">Inviter à jouer</a></td>
                        </tr>
                    {% endfor %}

                </table>
            </div>

        </div>
        {% include 'AppBundle::Default/image_plateau.html.twig'%}
    </div>


{% endblock %}